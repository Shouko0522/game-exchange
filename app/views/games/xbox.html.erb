<div class="banner-xbox" style="background-image: linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)), url(https://source.unsplash.com/jCorhBYp_C4);">
  <div class="container">
    <div class="row justify-content-between">
    </div>
    <h1 class="text-center" style="color:white; padding-top: 8rem; font-size: 80px;">Xbox</h1>
    <div class="row justify-content-center">
      <h1 style="color: white;"></h1>
    </div>
  </div>
</div>
  <div class="cards">
    <% @games.each do |game| %>
      <% if game.photo.attached?%>
        <% background_url = cl_image_path game.photo.key, width: 500, height: 400, crop: :scale %>
      <% else %>
        <% background_url = 'https://images.unsplash.com/photo-1510015632688-f18aa4c1a95e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80' %>
      <% end %>
      <%= link_to game_path(game) do  %>
        <div class="card">
          <div class="additional" style="background-image: linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)), 
            url(https://media.wired.com/photos/5b22c58811196626aaeb168b/master/pass/xbox-FA.jpg); 
            background-size: cover; background-position: top;">
            <div class="user-card">
              <div class="coords">
                <div class="stats">
                  <div class="text-box">
                    <i class="fas fa-tag" style="color: white;"></i>
                    <div class="value">$<%= game.price %></div>
                  </div>
                  <div class="text-box">
                    <i class="fa fa-gamepad" style="color: white;"></i>
                    <div class="value"><%= game.platform %></div>
                  </div>
                  <div class="text-box">
                    <i class="fas fa-tv" style="color: white;"></i>
                    <div class="value"><%= game.genre %></div>
                  </div>
                </div>
              </div>
              
              
            </div>
            <div class="more-info">
              <h1 style="color: white;"><%= game.name %></h1>
              <div>
                <% if game.user.photo.attached?%>
                  <%= cl_image_tag game.user.photo.key, class: "avatar-large"%>
                <% else %>
                  <%= cl_image_tag "https://images.unsplash.com/photo-1529699310859-b163e33e4556?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1122&q=80", class: "avatar-large" %>
                <% end %>
              </div>
              <div class="user-name text-center" style="color: white">
                <%= game.user.name %>
              </div>
            </div>
          </div>
          <div class="general">
            <div class="card-category" style="background-image: url('<%= background_url %>')">
            </div>
            <span class="more">Mouse over the card for more info</span>
          </div>
        </div> 
      <% end %> 
    <% end %>
  </div>
</div>
